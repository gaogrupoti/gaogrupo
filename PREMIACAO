  <script>
    document.getElementById('premioForm').addEventListener('submit', function(e) {
      e.preventDefault();

      const nome = document.getElementById('nome').value.trim();
      const email = document.getElementById('email').value.trim();
      const telefone = document.getElementById('telefone').value.trim();
      const cpf = document.getElementById('cpf').value.trim();
      const motivo = document.getElementById('motivo').value.trim();

      if (!nome || !email || !telefone || !cpf || !motivo) {
        alert('Por favor, preencha todos os campos.');
        return;
      }

      if (!/^\d{11}$/.test(cpf)) {
        alert('CPF inv√°lido! Digite 11 n√∫meros sem pontos ou tra√ßos.');
        return;
      }

      alert('Formul√°rio enviado com sucesso! Obrigado pela participa√ß√£o.');
      this.reset();
    });
  </script>
